{
    "info": {
        "name": "ShopEase Secure API (Role-Based)",
        "_postman_id": "c1b1c9f0-8080-45ab-bc45-bb2c4fa9999",
        "description": "Enhanced Postman collection for ShopEase Spring Boot Secure E-Commerce API with JWT Role-Based Testing",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "jwtTokenUser",
            "value": ""
        },
        {
            "key": "jwtTokenAdmin",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "User Registration (user1)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"user1\",\n    \"email\": \"user1@example.com\",\n    \"password\": \"user123\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8080/api/auth/register"
                }
            }
        },
        {
            "name": "Admin Registration (admin)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"admin\",\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8080/api/auth/register"
                }
            }
        },
        {
            "name": "User Login (user1)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.collectionVariables.set('jwtTokenUser', jsonData.token);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"user1\",\n    \"password\": \"user123\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8080/api/auth/login"
                }
            }
        },
        {
            "name": "Admin Login (admin)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.collectionVariables.set('jwtTokenAdmin', jsonData.token);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8080/api/auth/login"
                }
            }
        },
        {
            "name": "User - Get Dashboard",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{jwtTokenUser}}"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8080/api/user/dashboard"
                }
            }
        },
        {
            "name": "User - Get Purchases (Own Only)",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{jwtTokenUser}}"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8080/api/user/purchases"
                }
            }
        },
        {
            "name": "Admin - Get All Users",
            "request": {
                "method": "GET",
                "header": [
